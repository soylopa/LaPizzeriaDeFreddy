let  pizza1info = document.querySelector(".pizza1")
let  pizza2info = document.querySelector(".pizza2")
let  pizza3info = document.querySelector(".pizza3")
let  pizza4info = document.querySelector(".pizza4")

function showpizza1(){
    pizza1info.classList.toggle("show")
}
function showpizza2(){
    pizza2info.classList.toggle("show")
}
function showpizza3(){
    pizza3info.classList.toggle("show")
}
function showpizza4(){
    pizza4info.classList.toggle("show")
}
// let pizzas=[showpizza1 , showpizza2 , showpizza3 , showpizza4]

let numero = 1

document.addEventListener("",function(){
    number = numero++;
    numberbefore = number-- 
    let pizzas = eval(`pizza${numero}info`)
    let pizzabefore = eval(`pizza${numberbefore}info`)
    pizzas.classList.toggle("show")
    pizzabefore.classList.toggle("show")
    console.log(numero)
})



